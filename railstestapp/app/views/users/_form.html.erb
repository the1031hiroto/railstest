    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :dm %>
    <%= form.check_box :dm, id: :user_dm %>
  </div>

  <div class="field">
    <%= form.label :roles %>
    <%= form.text_field :roles, id: :user_roles %>
  </div>

  <div class="field">
    <%= form.label :reviews_count %>
