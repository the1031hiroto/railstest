<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book ID</th>
      <th>Title</th>
      <th>Body</th>
      <th>Like</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user.username %></td>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= book.likes_count %></td>
        <td><%= book.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
        <td><%= link_to 'Show', book %></td>
        <!--
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>

