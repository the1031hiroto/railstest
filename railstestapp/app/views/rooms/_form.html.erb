<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :room_name %>
  </div>
  
  <% @room.messages.each do |message| %>
    <%= form.fields_for :messages, message do |m| %>
      <div class="field">
        <%= m.label :messages %>
        <%= m.collection_check_boxes :user_id, @users, :user_id, :username %>
      </div>
    <% end %>
  <% end %>
    
  <div class="field">
    <%= form.label :user %>
    <%= form.collection_check_boxes :id, @users, :id, :username %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
